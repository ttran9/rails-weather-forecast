<% if @user_searches.length > 0 %>
  <p><h1>Your search history below:</h1></p>
  <table class="table table-striped table-inverse table-bordered">
    <thead>
      <tr>
        <th>Address Searched For:</th>
        <th>Date When Searched:</th>
      </tr>
    </thead>
    <tbody id="user_searches">
      <%= render 'user_searches', collection: @user_searches %>
    </tbody>
  </table>

  <div id="paginator">
    <%= paginate @user_searches, remote: true %>
  </div>
<% else %>
  <p><h1>You have not made any searches</h1></p>
<% end %>

