<% if flash[:alert] %>
  <%= js add_gritter(flash[:alert], title: "Forecast App Alert", sticky: false, time: 500, image: :notice) %>
<% elsif flash[:error] %>
  <%= js add_gritter(flash[:error], title: "Forecast App Error", sticky: false, time: 500, image: :notice) %>
<% else %>
  <%= js add_gritter(flash[:notice], title: "Forecast App Notification", sticky: false, time: 500, image: :notice) %>
<% end %>
